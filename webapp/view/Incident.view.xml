<mvc:View controllerName="ehsm.controller.Incident"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page title="Incident Management" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <Table id="incidentTable" 
                items="{
                    path: '/Z899_INCIDENT',
                    sorter: { path: 'IncidentID', descending: true }
                }"
                growing="true"
                growingThreshold="20"
                width="auto"
                class="sapUiResponsiveMargin">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Incidents" level="H2"/>
                        <ToolbarSpacer/>
                        <SearchField width="30%" search=".onFilterIncidents" placeholder="Search by ID or Category"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Incident ID" /></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Plant" /></Column>
                    <Column><Text text="Description" /></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Category" /></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Priority" /></Column>
                    <Column><Text text="Status" /></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Date &amp; Time" /></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Completion Date" /></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Created By" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{IncidentID}" />
                            <Text text="{Plant}" />
                            <Text text="{IncidentDescription}" />
                            <Text text="{IncidentCategory}" />
                            <ObjectStatus text="{IncidentPriority}" state="{= ${IncidentPriority} === 'High' ? 'Error' : 'None'}" />
                            <ObjectStatus text="{IncidentStatus}" 
                                state="{= ${IncidentStatus} === 'Closed' ? 'Success' : 'Warning'}" 
                                icon="{= ${IncidentStatus} === 'Closed' ? 'sap-icon://accept' : 'sap-icon://alert'}" />
                            <VBox>
                                <Text text="{path: 'IncidentDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy' }}" />
                                <Text text="{path: 'IncidentTime', type: 'sap.ui.model.type.Time', formatOptions: { pattern: 'HH:mm:ss' }}" />
                            </VBox>
                            <Text text="{path: 'CompletionDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy' }}" />
                            <Text text="{CreatedBy}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
