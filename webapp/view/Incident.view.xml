<mvc:View controllerName="ehsm.controller.Incident"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page title="Incident Management" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <Table id="idIncidentTable"
                items="{
                    path: '/Z899_INCIDENT',
                    sorter: { path: 'IncidentID', descending: true }
                }"
                growing="true"
                growingThreshold="20"
                width="auto"
                class="sapUiResponsiveMargin">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Incidents" level="H2"/>
                        <ToolbarSpacer/>
                        <SearchField width="30%" search=".onSearch" placeholder="Filter by Title or ID"/>
                        <Button icon="sap-icon://sort" press=".onSort"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="Incident ID" /></Column>
                    <Column><Text text="Title" /></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Group" /></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Category" /></Column>
                    <Column><Text text="Status" /></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Plant ID" /></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Location" /></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Created On" /></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Created By" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{IncidentID}" />
                            <Text text="{Title}" />
                            <Text text="{IncidentGroup}" />
                            <Text text="{IncidentCategory}" />
                            <ObjectStatus text="{IncidentRecordStatus}" state="{= ${IncidentRecordStatus} === 'Closed' ? 'Success' : 'Warning'}" />
                            <Text text="{PlantID}" />
                            <Text text="{Location}" />
                            <Text text="{path: 'CreatedOn', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'MMM dd, yyyy' }}" />
                            <Text text="{CreatedBy}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
