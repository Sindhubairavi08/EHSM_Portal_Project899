<mvc:View controllerName="ehsm.controller.Dashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Page title="EHSM Dashboard" showNavButton="false">
        <headerContent>
            <Button icon="sap-icon://log" text="Logout" type="Transparent" press=".onLogout"/>
        </headerContent>
        <content>
            <l:Grid defaultSpan="L6 M6 S12" class="sapUiSmallMarginTop">
                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Risk Management" subheader="Manage Safety Risks" press=".onPressRisk">
                    <tileContent>
                        <TileContent>
                            <ImageContent src="sap-icon://alert" />
                        </TileContent>
                    </tileContent>
                </GenericTile>
                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Incident Management" subheader="Track Incidents" press=".onPressIncident">
                    <tileContent>
                        <TileContent>
                            <ImageContent src="sap-icon://incident" />
                        </TileContent>
                    </tileContent>
                </GenericTile>
            </l:Grid>
        </content>
    </Page>
</mvc:View>
