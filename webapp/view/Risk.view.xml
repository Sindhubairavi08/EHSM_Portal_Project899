<mvc:View controllerName="ehsm.controller.Risk"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page title="Risk Assessment" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <Table id="idRiskTable"
                items="{
                    path: '/Z899_RISK',
                    sorter: { path: 'RiskKeyRef', descending: false }
                }"
                growing="true"
                growingThreshold="20"
                width="auto"
                class="sapUiResponsiveMargin">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Risk Assessments" level="H2"/>
                        <ToolbarSpacer/>
                        <SearchField width="30%" search=".onSearch" placeholder="Search Risk Key or Member"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="Risk Key" /></Column>
                    <Column><Text text="Team Member" /></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Role" /></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Regulation" /></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Regulation URL" /></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Created On" /></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Created By" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{RiskKeyRef}" />
                            <Text text="{TeamMember}" />
                            <Text text="{Role}" />
                            <Text text="{Regulation}" />
                            <Link text="View Regulation" href="{RegulationURL}" target="_blank" />
                            <Text text="{path: 'CreatedOn', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'MMM dd, yyyy' }}" />
                            <Text text="{CreatedBy}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
